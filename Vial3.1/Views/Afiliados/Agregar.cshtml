@model  Vial3._1.Models.ViewModels.AfiliadoVM
@{
    ViewBag.Title = "Sindicato Trabajadores Viales - Catamarca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nuevo Afiliado</h2>
<div class="text-success">
    <h5>@ViewBag.Message</h5>
</div>
@using (@Html.BeginForm("Agregar", "afiliados", FormMethod.Post))
{

<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(d => d.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(d => d.Apellido, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(d => d.Apellido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(d => d.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(d => d.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(d => d.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(d => d.Documento , htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(d => d.Documento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(d => d.Documento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(d => d.Domicilio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(d => d.Domicilio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(d => d.Domicilio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(d => d.Telefono, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(d => d.Telefono, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <input type="submit" value="Agregar" class="btn btn-primary btn-block" />
        </div>
    </div>
    

</div>

}
